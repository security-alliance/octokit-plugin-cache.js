{
    "name": "@security-alliance/octokit-plugin-cache",
    "version": "0.0.0-development",
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "description": "Octokit plugin for caching GitHub API responses",
    "scripts": {
        "build": "node scripts/build.mjs && tsc -p tsconfig.json",
        "test": "mocha",
        "prettier:check": "npx prettier -c \"**/*.{js,ts,md,json,yml,yaml}\"",
        "prettier:fix": "npx prettier -w \"**/*.{js,ts,md,json,yml,yaml}\""
    },
    "repository": {
        "url": "git+https://github.com/security-alliance/octokit-plugin-cache.js.git"
    },
    "keywords": [
        "github",
        "octokit",
        "cache",
        "conditional-request"
    ],
    "author": "Security Alliance",
    "license": "MIT",
    "devDependencies": {
        "@octokit/core": "^7.0.4",
        "@octokit/endpoint": "^11.0.0",
        "@octokit/request-error": "^7.0.0",
        "@octokit/tsconfig": "^4.0.0",
        "@octokit/types": "^15.0.0",
        "@types/node": "^24.5.1",
        "esbuild": "^0.25.9",
        "glob": "^11.0.3",
        "mocha": "^11.7.2",
        "prettier": "^3.6.2",
        "semantic-release-plugin-update-version-in-files": "^2.0.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    },
    "peerDependencies": {
        "@octokit/core": "^7.0.4",
        "@octokit/endpoint": "^11.0.0",
        "@octokit/request-error": "^7.0.0",
        "@octokit/types": "^15.0.0"
    },
    "dependencies": {
        "lru-cache": "^11.2.1"
    },
    "release": {
        "branches": [
            "+([0-9]).x",
            "main",
            "next",
            {
                "name": "beta",
                "prerelease": true
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/github",
            [
                "@semantic-release/npm",
                {
                    "pkgRoot": "./pkg"
                }
            ],
            [
                "semantic-release-plugin-update-version-in-files",
                {
                    "files": [
                        "pkg/*/version.*"
                    ]
                }
            ]
        ]
    }
}
